
    <div id="left">
      <h1>Followers</h1>
      <ul class="user_listing">
        <% @followers.each() do |f| -%>
          <%= render :partial => "user_listing_entry", :locals => {:ue => f} %>
        <% end -%>
      </ul>
    </div> <!-- left -->
    <div id="middle">
      <div id="user">
        <% unless @user.nil? %>
        <p id="user_heading">
          <img src="<%= @user.profile_image_url -%>" width="80" height="80">
          <h1><%= @user.name  %></h1>
          
        </p>
        <p>
          <table id="user_tweets">
            <% @user_tweets.each() do |t| -%>
            <tr>
              <td style="font-size: small;"><%= short_date(t.created_at) -%></td>
              <td><%= t.text %></td>
            <% end -%>
            </tr>
          </table>
        </p>
      </div>
      <% end -%>
    </div>
    <div id="right">
      <h1>Friends</h1>
      <ul class="user_listing">
        <% @friends.each() do |f| -%>
           <%= render :partial => "user_listing_entry", :locals => {:ue => f} %>
        <% end -%>
      </ul>
    </div>
